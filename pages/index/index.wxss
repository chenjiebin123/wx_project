Page {
    height: 100%;
}

.layout {
    width: 100%;
    height: 100%;
    background-color: #eeeeee;
    padding: 30rpx;
    box-sizing: border-box;
}

.layout {
    overflow-y: auto;
}

/* 轮播图 */
.layout .banner {
    width: 100%;
    height: 340rpx;
    
    overflow: hidden;
}

.layout swiper {
    height: 100%;
}

.banner .img {
    width: 100%;
    height: 340rpx;
    border-radius: 20rpx;
}

/* 导航栏 */
.layout .nav {
    margin-top: 20rpx;
    width: 100%;
    height: 300rpx;
    background-color: white;
    border-radius: 20rpx;
    overflow: hidden;
    padding: 20rpx 50rpx 0;
    box-sizing: border-box;
}

.nav .nav-top {
    width: 100%;
    height: 55%;
    /* background-color: red; */
    border-bottom: 1px solid #bfbfbf;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-top .nav-list-box {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 70rpx;
}

.nav-top .nav-list-box .img {
    height: 70rpx;
    width: 70rpx;
    margin-bottom: 16rpx;
    vertical-align: middle;
}

.nav-top .nav-list-box .text {
    font-size: 26rpx;
    width: 70rpx;
    text-align: center;
    color: #bfbfbf;
}

.nav .nav-bottom {
    width: 100%;
    height: 45%;
    /* background-color: green; */
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-bottom .nav-bottom-img {
    height: 80rpx;
    width: 120rpx;
    vertical-align: middle;
}

.nav-bottom text {
    font-size: 28rpx;
    color: #bfbfbf;
}

.nav-bottom .btn {
    width: 150rpx !important;
    font-size: 24rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    padding: 0;
    color: white;
    background-color: rgb(0, 110, 255);
    border-radius: 50rpx;
    margin: 0 !important;
}

/* 走马灯 */
.layout .textMove {
    margin-top: 20rpx;
    width: 100%;
    height: 100rpx;
    border-radius: 20rpx;
    background-color: white;
    padding: 10rpx 50rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.textMove .img {
    height: 60rpx;
    width: 140rpx;
    margin-right: 10rpx;
}

.textMove .text-box {
    width: 440rpx;
    display: flex;
    overflow: hidden;
    /* background-color: rgb(4, 134, 134); */
    position: relative;
    height: 60rpx;
}

.text-box .textMove-text {
    white-space: nowrap;
    /* overflow: hidden; */
    width: auto;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #9e9e9e;
    /* background-color: rgb(3, 76, 105); */
    transform: translate(-0px);
    position: absolute;
    left: 0;
    top: 0;
}

/* 焦点 */
.layout .hot {
    height: 320rpx;
    width: 100%;
    margin-top: 20rpx;

    /* background-color: brown; */
}

.layout .hot .title {
    height: 80rpx;
    background-color: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.hot .title .title-left {
    width: 200rpx;
    text-align: left;
    display: flex;
    align-items: center;
}

.hot .title .title-left .img {
    height: 50rpx;
    width: 50rpx;
    margin-right: 20rpx;
}

.hot .title .title-right {
    width: 150rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 22rpx;
    color: #bfbfbf;
}

.hot .title .title-right .img {
    height: 20rpx;
    width: 20rpx;
}

.layout .hot .contentList {
    display: flex;
    flex-wrap: nowrap;
    overflow: scroll;
}

.contentList::-webkit-scrollbar {
    display: none;
}

.layout .hot .contentList>view {
    height: 240rpx;
    width: 400rpx;
    background-color: rgb(255, 255, 255);
    margin-right: 20rpx;
    flex-shrink: 0;
    border-radius: 20rpx;
    overflow: hidden;
}
.contentList > view .contentList-top {
    width: 100%;
    height: 60%;

}
.contentList-top .contentList-top-img {
    width: 100%;
    height: 100%;
}
.contentList > view .contentList-bottom {
    width: 100%;
    height: 40%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    padding-left: 12rpx;
    padding-right: 12rpx;
    box-sizing: border-box;
}
.contentList-bottom .contentList-bottom-title {
    width: 100%;
    font-size: 24rpx;
}
.contentList-bottom .contentList-bottom-jieshao {
    width: 100%;
    font-size: 22rpx;
    color: #9e9e9e;
    white-space:nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
/* 最新文章列表 */
.layout .articleList {
    margin-top: 20rpx;
    width: 100%;
    height: 100%;
    /* background-color: rgb(116, 165, 136); */
}

.layout .articleList .title {
    height: 80rpx;
    background-color: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.articleList .title .title-left {
    width: 200rpx;
    text-align: left;
    display: flex;
    align-items: center;
}

.articleList .title .title-left .img {
    height: 50rpx;
    width: 50rpx;
    margin-right: 20rpx;
}

.articleList .title .title-right {
    width: 150rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 22rpx;
    color: #bfbfbf;
}

.articleList .title .title-right .img {
    height: 20rpx;
    width: 20rpx;
}