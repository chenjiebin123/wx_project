/* components/detail.wxss */
Page {
    height: 100%;
}
.layout {
    width: 100%;
    height: 100%;
    background-color: #eeeeee;
    padding: 0 30rpx;
    box-sizing: border-box;
    overflow-y: scroll;
}
/* 列表盒子 */
.list-box {
    height: 360rpx;
    width: 100%;
    margin: 45rpx 0;
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
}
/* 图片 */
.list-box .picture {
    height: 75%;
    width: 100%;
    border-radius: 20rpx;
    overflow: hidden;
}

.picture .img {
    height: 100%;
    width: 100%;
}
/* 标题 */
.list-box .text {
    width: 100%;
    height: 25%;
    padding: 16rpx 20rpx 0;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
/* 标题 */
.text .title {
    display: block;
    flex-grow: 1;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    font-size: 28rpx;
    /* background-color: red; */
}
/* 数量 */
.text .count {
    width: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 20rpx;
    color: #8d8d8d;
}